---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
---

<Layout title="Propiedades en Águilas - Llave del Sur">
  
  <Header />
  
  <main>
    <!-- Hero Section -->
    <section class="bg-gradient-to-r from-gray-900 to-gray-700 text-white py-16">
      <div class="container mx-auto px-4 sm:px-6 lg:px-8">
        <div class="max-w-4xl mx-auto text-center">
          <h1 class="text-4xl md:text-5xl font-bold mb-6">
            Todas las Propiedades
          </h1>
          <p class="text-xl mb-8 opacity-90">
            Descubre tu hogar ideal entre nuestra amplia selección de propiedades en Águilas
          </p>
        </div>
      </div>
    </section>

    <!-- Filters Section -->
    <section class="bg-white py-8 border-b border-gray-200">
      <div class="container mx-auto px-4 sm:px-6 lg:px-8">
        <div class="grid grid-cols-1 md:grid-cols-4 gap-4">
          <div>
            <select class="w-full p-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-yellow-500">
              <option value="">Todas las operaciones</option>
              <option value="venta">Venta</option>
              <option value="alquiler">Alquiler</option>
            </select>
          </div>
          
          <div>
            <select class="w-full p-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-yellow-500">
              <option value="">Todas las zonas</option>
              <option value="aguilas-centro">Águilas Centro</option>
              <option value="calabardina">Calabardina</option>
              <option value="calarreona">Calarreona</option>
              <option value="casco-antiguo">Casco Antiguo</option>
              <option value="delicias">Delicias</option>
              <option value="el-hornillo">El Hornillo</option>
              <option value="isla-del-fraile">Isla del Fraile</option>
            </select>
          </div>
          
          <div>
            <select class="w-full p-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-yellow-500">
              <option value="">Precio máximo</option>
              <option value="100000">100.000€</option>
              <option value="200000">200.000€</option>
              <option value="300000">300.000€</option>
              <option value="500000">500.000€</option>
            </select>
          </div>
          
          <button class="bg-gray-900 text-yellow-400 px-6 py-3 rounded-lg font-medium hover:bg-gray-800 transition-colors">
            Filtrar
          </button>
        </div>
      </div>
    </section>

    <!-- Properties Grid -->
    <section class="bg-gray-50 py-12">
      <div class="container mx-auto px-4 sm:px-6 lg:px-8">
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
          
          <!-- Property Card 1 -->
          <div class="bg-white rounded-2xl shadow-lg overflow-hidden hover:shadow-xl transition-all duration-300">
            <div class="relative">
              <div class="h-64 bg-gradient-to-br from-blue-400 to-blue-600"></div>
              <div class="absolute top-4 left-4">
                <span class="bg-green-500 text-white px-3 py-1 rounded-full text-sm font-semibold">
                  Venta
                </span>
              </div>
            </div>
            
            <div class="p-6">
              <div class="flex justify-between items-start mb-3">
                <h3 class="text-xl font-bold text-gray-900">
                  Villa con vistas al mar
                </h3>
                <p class="text-2xl font-bold text-yellow-600">
                  425.000€
                </p>
              </div>
              
              <p class="text-gray-600 mb-4">
                Magnífica villa de 3 habitaciones con vistas panorámicas al Mediterráneo
              </p>
              
              <div class="flex items-center text-sm text-gray-500 mb-4 space-x-4">
                <span>3 hab</span>
                <span>2 baños</span>
                <span>180m²</span>
              </div>
              
              <div class="flex items-center justify-between">
                <span class="text-sm text-gray-500">Cala de la Cueva</span>
                <a href="#" class="text-yellow-600 font-semibold hover:text-yellow-700 transition-colors">
                  Ver detalles →
                </a>
              </div>
            </div>
          </div>

          <!-- Property Card 2 -->
          <div class="bg-white rounded-2xl shadow-lg overflow-hidden hover:shadow-xl transition-all duration-300">
            <div class="relative">
              <div class="h-64 bg-gradient-to-br from-orange-400 to-red-500"></div>
              <div class="absolute top-4 left-4">
                <span class="bg-blue-500 text-white px-3 py-1 rounded-full text-sm font-semibold">
                  Alquiler
                </span>
              </div>
            </div>
            
            <div class="p-6">
              <div class="flex justify-between items-start mb-3">
                <h3 class="text-xl font-bold text-gray-900">
                  Apartamento moderno
                </h3>
                <p class="text-2xl font-bold text-yellow-600">
                  850€/mes
                </p>
              </div>
              
              <p class="text-gray-600 mb-4">
                Apartamento reformado en el centro histórico
              </p>
              
              <div class="flex items-center text-sm text-gray-500 mb-4 space-x-4">
                <span>2 hab</span>
                <span>1 baño</span>
                <span>95m²</span>
              </div>
              
              <div class="flex items-center justify-between">
                <span class="text-sm text-gray-500">Centro Histórico</span>
                <a href="#" class="text-yellow-600 font-semibold hover:text-yellow-700 transition-colors">
                  Ver detalles →
                </a>
              </div>
            </div>
          </div>

          <!-- Property Card 3 -->
          <div class="bg-white rounded-2xl shadow-lg overflow-hidden hover:shadow-xl transition-all duration-300">
            <div class="relative">
              <div class="h-64 bg-gradient-to-br from-green-400 to-blue-500"></div>
              <div class="absolute top-4 left-4">
                <span class="bg-green-500 text-white px-3 py-1 rounded-full text-sm font-semibold">
                  Venta
                </span>
              </div>
            </div>
            
            <div class="p-6">
              <div class="flex justify-between items-start mb-3">
                <h3 class="text-xl font-bold text-gray-900">
                  Casa tradicional
                </h3>
                <p class="text-2xl font-bold text-yellow-600">
                  195.000€
                </p>
              </div>
              
              <p class="text-gray-600 mb-4">
                Encantadora casa tradicional con patio y terraza
              </p>
              
              <div class="flex items-center text-sm text-gray-500 mb-4 space-x-4">
                <span>4 hab</span>
                <span>2 baños</span>
                <span>140m²</span>
              </div>
              
              <div class="flex items-center justify-between">
                <span class="text-sm text-gray-500">Pueblo Tradicional</span>
                <a href="#" class="text-yellow-600 font-semibold hover:text-yellow-700 transition-colors">
                  Ver detalles →
                </a>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>
  </main>

  <Footer />
</Layout>